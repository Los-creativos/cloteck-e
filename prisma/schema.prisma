generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  customer_id  Int     @id @default(autoincrement())
  name         String  @db.VarChar(50)
  last_name    String  @db.VarChar(50)
  email        String  @db.VarChar(50)
  phone_number Int?
  type_user    String  @db.VarChar(50)
  Order        Order[]
}

model Product {
  product_id      Int               @id @default(autoincrement())
  name            String            @db.VarChar(50)
  description     String            @db.VarChar(200)
  price           Int
  image           String?           @db.Char(100)
  quantity        Int
  ProductCategory ProductCategory[]
  ProductSize     ProductSize[]
  ProductColor    ProductColor[]
  Order           Order[]
}

model Category {
  category_id     Int               @id @default(autoincrement())
  name            String            @db.VarChar(50)
  description     String            @db.VarChar(200)
  ProductCategory ProductCategory[]
}

model ProductCategory {
  product_category_id Int      @id @default(autoincrement())
  product_id          Int
  category_id         Int
  product             Product  @relation(fields: [product_id], references: [product_id])
  category            Category @relation(fields: [category_id], references: [category_id])
}

model Size {
  size_id     Int           @id @default(autoincrement())
  name        String        @db.VarChar(50)
  ProductSize ProductSize[]
}

model ProductSize {
  product_size_id Int     @id @default(autoincrement())
  product_id      Int
  size_id         Int
  product         Product @relation(fields: [product_id], references: [product_id])
  size            Size    @relation(fields: [size_id], references: [size_id])
}

model Color {
  color_id     Int            @id @default(autoincrement())
  name         String         @db.VarChar(50)
  ProductColor ProductColor[]
}

model ProductColor {
  product_color_id Int     @id @default(autoincrement())
  product_id       Int
  color_id         Int
  product          Product @relation(fields: [product_id], references: [product_id])
  color            Color   @relation(fields: [color_id], references: [color_id])
}

model Order {
  order_id         Int        @id @default(autoincrement())
  product_id       Int
  user_id          Int
  product_quantity Int
  date             DateTime   @default(now())
  product          Product    @relation(fields: [product_id], references: [product_id])
  customer         Customer   @relation(fields: [user_id], references: [customer_id])
  Shipment         Shipment[]
}

model Shipment {
  shipment_id  Int   @id @default(autoincrement())
  order_id     Int
  total_amount Int
  order        Order @relation(fields: [order_id], references: [order_id])
}

model Region {
  region_id Int    @id @default(autoincrement())
  name      String @db.VarChar(50)
  taxes     Int
}
